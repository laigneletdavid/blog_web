{% set menus = menu_service.findMenuTwig %}
{% set widget_article = widget_service.findLastArticle['0'] %}
{% set categories = widget_service.findCategories %}


<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>Blog&Web</title>
        <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('images/apple-touch-icon.png') }}">
        <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('images/favicon-32x32.png') }}">
        <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('images/favicon-16x16.png') }}">
        <link rel="manifest" href="{{ asset('images/site.webmanifest') }}"><link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Expletus+Sans:ital@0;1&family=Open+Sans:ital@0;1&family=Titillium+Web:ital@0;1&display=swap" rel="stylesheet">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>

        <div class="header mb-5">
            <div class="desk">
                {% if is_granted('ROLE_CORRECTOR') %}
                <div class="header-admin bg-dark ps-5">
                    <div class="d-flex flex-row">
                        <nav class="navbar">
                            <ul class="nav d-flex flex-row align-items-center">
                                <img src="{{ asset('images/logo xlight- b&w-50px.png') }}" alt="Administartion"/>
                                <li class="nav-item p-2"><a href="{{ path('admin') }}" class="nav-link text-decoration-none  text-light">Administration</a></li>
                            </ul>
                        </nav>
                    </div>
                </div>
                {% endif %}
                <div class="header_info">
                    <div class="container d-flex flex-row justify-content-between pt-3 pb-3">
                        <div class="header_logo">
                            <a href="{{ path('app_home') }}">
                             <img src="{{ asset('images/BlogWebbeta-h150.png') }}" alt="votre-logo"/>
                            </a>
                        </div>
                        <div class="header_action d-flex flex-column justify-content-between">
