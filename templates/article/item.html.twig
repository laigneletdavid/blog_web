<article class="col-lg-6 article mb-5 mb-lg-0">
    <a href="{{ path('app_article_show', { 'slug': article.slug}) }}" class="article_link d-flex flex-column">
        <div class="article_block_img" >
            <img class="article_img" src="{{ asset('documents/medias/' ~ article.featuredMedia.fileName) }}" alt="{{ article.title }}">
        </div>

        <div class="article_block">
            <h2 class="article_title">{{ article.title }}</h2>
            <div class="article_categories d-flex flex-row justify-content-between">
                <div>
                {% for cat in article.categories %}
                    <strong class="d-inline-block mb-2 me-3" style="color: {{ cat.color }};">{{ cat.name }}</strong>
                {% endfor %}
                </div>
                <p class="article_credit">{{ article.createdAt|date('d M Y') }}</p>
            </div>

            <p class="article_text">{{ article.featuredText ?: article.content|striptags|slice(0, 130) ~ '...' }}</p>
        </div>



    </a>
</article>