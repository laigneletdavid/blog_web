{% extends 'base.html.twig' %}

{% block title %}Mon Compte{% endblock %}

{% block body %}
<div class="container">
    <div class="user_infos mb-5">
        <h1 class="title-one mb-3">Mon compte</h1>
    <div class="table-responsive">
        <table class="table table-striped table align-middle">
            <tbody>

            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.name ? user.name: '' }}</td>
            </tr>
            <tr>
                <th>Pr√©nom</th>
                <td>{{ user.firstName ? user.firstName : '' }}</td>
            </tr>
            <tr>
                <th>Abonnement newsletter</th>
                <td>{{ user.news != 0 ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>Abonnement nouveaux articles</th>
                <td>{{ user.articles != 0 ? 'Oui' : 'Non' }}</td>
            </tr>
            </tbody>
        </table>
    </div>

        <div class="d-flex flex-lg-row flex-column justify-content-center">
            <a class="btn-font btn btn-primary mb-3 mt-3 me-lg-3" href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>
            <a class="btn-font btn btn-outline-secondary mb-3 mt-3" href="{{ path('app_home_find') }}">Modifier mon mot de passe</a>
        </div>
    </div>
</div>
{% endblock %}